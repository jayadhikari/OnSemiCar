<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.esp.esp_app.MainActivity">

    <Button
        android:id="@+id/wifiOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:onClick="wifi_connect"
        android:text="connect"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/fwd_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@android:color/darker_gray"
        android:onClick="fwd"
        android:text="Forward"
        android:layout_above="@+id/stop_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bck_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:onClick="back"
        android:text="back"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/stop_btn"
        android:layout_alignStart="@+id/stop_btn" />

    <Button
        android:id="@+id/lft_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/darker_gray"
        android:onClick="left"
        android:text="left"
        android:layout_alignBaseline="@+id/stop_btn"
        android:layout_alignBottom="@+id/stop_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:onClick="right"
        android:text="right"
        android:layout_alignBaseline="@+id/stop_btn"
        android:layout_alignBottom="@+id/stop_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <Button
        android:id="@+id/car_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:onClick="carMode"
        android:text="MANUAL"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/safetyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:onClick="safetyFn"
        android:text="Safety ON"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fwd_btn"
        android:layout_alignStart="@+id/fwd_btn" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bck_btn"
        android:layout_alignLeft="@+id/fwd_btn"
        android:layout_alignStart="@+id/fwd_btn"
        android:layout_marginBottom="22dp"
        android:background="@android:color/holo_green_light"
        android:onClick="stopFn"
        android:text="STOP" />

    <SeekBar
        android:id="@+id/speedBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wifiOnOff"
        android:layout_marginTop="74dp"
        android:max="10"
        android:progress="0" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/speedBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:text="SPEED "
        android:textColor="@android:color/background_light" />

</RelativeLayout>
